from flask import Flask, jsonify
import sqlite3

app = Flask(__name__)

@app.route('/',methods=['GET','POST'])
def get_tasks():
    conn=sqlite3.connect("hiring")
    cur=conn.cursor()
    res=cur.execute("select * from data")
    for i in res.fetchall():
        dict["sno"]=res[0]
        dict["companyname"]=res[1]
        dict["link"]=res[3]
    return jsonify(dict)



